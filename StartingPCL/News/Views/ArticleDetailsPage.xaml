<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="StartingPCL.ArticleDetailsPage">
	<ContentPage.Content>
	 	<StackLayout Margin="20, 20" 
	 		Orientation="Vertical" Spacing="20">

	 		<StackLayout Orientation="Horizontal">
	 			<Image Source="{Binding DetailsImageSource}" HeightRequest="100" WidthRequest="100" IsVisible="{Binding IsImageVisible}"/>
	 			<StackLayout Orientation="Vertical">
	 				<Label Text="{Binding Title}" FontSize="20" TextColor="#2E415C"/>

	 				<StackLayout Orientation="Horizontal">
	 					<Label Text="{Binding TimeText}" FontSize="12" TextColor="#adb7be"/>
	 					<Label Text="{Binding SectionText}" FontSize="12" TextColor="#adb7be"/>
	 					<Label Text="{Binding SubsectionText}" FontSize="12" TextColor="#adb7be"/>
	 				</StackLayout>

	 			</StackLayout>
	 		</StackLayout>

	 		<Label Text="{Binding BodyText}" FontSize="18" TextColor="#2E415C"/>
	 		<Button Text="Читать на сайте" Command="{Binding ReadMoreCommand}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
